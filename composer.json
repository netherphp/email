{
	"name": "netherphp/email",
	"description": "An email library.",
	"keywords": [ "php", "email", "sendgrid" ],
	"license": "BSD-2-Clause",
	"authors":[
		{
			"name": "Bob Majdak Jr",
			"email": "bmajdak@php.net",
			"homepage": "http://pegasusgate.net/+bob",
			"role": "developer"
		}
	],
	"config": {
		"preferred-install": {
			"netherphp/*": "source",
			"*": "dist"
		},
		"allow-plugins": {
			"netherphp/composer-plugin": true,
			"dealerdirect/phpcodesniffer-composer-installer": true
		}
	},
	"require": {
		"php": "^8.1",
		"netherphp/common": "^5.0.5",
		"sendgrid/sendgrid": "^8.0.1",
		"google/recaptcha": "^1.2.4",
		"mailjet/mailjet-apiv3-php": "^1.5",
		"phpmailer/phpmailer": "^6.7"
	},
	"require-dev": {
		"netherphp/standards": ">=0.2.8",
		"phpunit/phpunit": "^9.5.28",
		"dealerdirect/phpcodesniffer-composer-installer": "^0.7.2"
	},
	"bin": [
	],
	"autoload": {
		"psr-0": {
			"Nether\\":"src/"
		}
	}
}
